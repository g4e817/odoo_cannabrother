<odoo>
         <record id="custom_sale_auto_workflow_sale_workflow_process" model="ir.ui.view">
            <field name="model">sale.workflow.process.ept</field>
            <field name="inherit_id" ref="common_connector_library.sale_workflow_process_view_form" />
            <field name="arch" type="xml">
                <field name="journal_id" position="attributes">
                    <attribute name="attrs">{}</attribute>
                </field>
            </field>
        </record>

        <record id="custom_sale_auto_workflow_account_payment_mode_form" model="ir.ui.view">
            <field name="model">account.payment.mode</field>
            <field name="inherit_id" ref="account_payment_mode.account_payment_mode_form" />
            <field name="arch" type="xml">
                <field name="refund_payment_mode_id" position="after">
                    <field name="auto_workflow_process_id" />
                </field>
            </field>
        </record>

        <record id="custom_sale_auto_workflow_view_move_form" model="ir.ui.view">
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='other_info']//field[@name='ref']" position="after">
                    <field name="auto_sale_order_id" />
                    <field name="auto_workflow_process_id" />
                </xpath>
            </field>
        </record>

        <template id="report_invoice_document" inherit_id="custom_invoice_template.report_invoice_document">
            <xpath expr="//t[@name='payment_communication']" position="before">
                <t t-if="o.payment_mode_id">
                    <br/><p>Zahlungsart: <b><span t-esc="o.payment_mode_id.name"/></b></p>
                </t>
            </xpath>
        </template>

        <record id="custom_sale_auto_workflow_view_woo_payment_gateway_form" model="ir.ui.view">
            <field name="model">woo.payment.gateway</field>
            <field name="inherit_id" ref="woo_commerce_ept.view_woo_payment_gateway_form"/>
            <field name="arch" type="xml">
                    <field name="woo_instance_id" position="after">
                        <field name="payment_mode_id" />
                    </field>
            </field>
        </record>
</odoo>
