<odoo>
    <data>
        <record forcecreate="True"  id="ir_cron_postlabel_creation" model="ir.cron">
            <field name="name">PostLabel: update label</field>
            <field name="model_id" ref="postlabel.model_stock_picking"/>
            <field name="user_id" ref="base.user_root" />
            <field name="type">ir.actions.server</field>
            <field eval="True" name="active" />
            <field name="state">code</field>
            <field name="code">model.action_post_label()</field>
            <field name="interval_number">1</field>
             <field eval="False" name="doall" />
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
        </record>
    </data>
</odoo>